<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_card"
    android:layout_marginLeft="@dimen/margin_card"
    android:layout_marginTop="@dimen/margin_card"
    android:layout_marginRight="@dimen/margin_card"
    android:layout_marginEnd="@dimen/margin_card"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mater_margin_x0.5"
            android:layout_marginLeft="@dimen/mater_margin_x0.5"
            android:layout_marginTop="@dimen/mater_margin_x0.5"
            android:text="Alex"
            android:textSize="@dimen/test_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/field_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mater_margin_x0.5"
            android:layout_marginLeft="@dimen/mater_margin_x0.5"
            android:layout_marginTop="@dimen/mater_margin_x0.5"
            android:layout_marginBottom="@dimen/mater_margin_x0.5"
            android:text="qqq"
            android:textSize="@dimen/test_size_fragment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/field_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mater_margin_x0.5"
            android:layout_marginEnd="@dimen/mater_margin_x0.5"
            android:layout_marginRight="@dimen/mater_margin_x0.5"
            android:layout_marginBottom="@dimen/mater_margin_x0.5"
            android:text="1000"
            android:textSize="@dimen/text_size_debt_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>